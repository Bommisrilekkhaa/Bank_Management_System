<body>
  <div class="user-form">
    <h2>Edit User</h2>
    
    <form {{action "submitForm" on="submit"}}>
      <div class="form-group">
        <label for="userId">Username<span style="color:rgb(237, 69, 69);">*</span></label>
        <input type="text" id="userId" value={{username}} class="form-control" disabled>
      </div>

      <div class="form-group">
        <label for="user_status">User Status<span style="color:rgb(237, 69, 69);">*</span></label>
        <select id="user_status" class="form-control" onchange={{action (mut user_status) value="target.value"}}>
          <option value="">Select Status</option>
          {{#each statuses as |status|}}
            <option value={{status}} selected={{if (eq status user_status) "selected"}}>{{status}}</option>
          {{/each}}
        </select>
      </div>

      <button type="submit" class="btn-primary">Update User</button>
      
      {{#link-to "users"}}
        <button class="btn-secondary">Cancel</button>
      {{/link-to}}

      {{#if errorMessage}}
        <div class="error-message">* {{errorMessage}}</div>
      {{/if}}
    </form>
  </div>
  {{notify-box message=notification.message type=notification.type}}
</body>
