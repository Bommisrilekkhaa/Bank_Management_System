<div class="accounts-list">
  <button {{action "addNewAccount"}} class="new-account-btn">New Account</button>
  
  <table class="accounts-table">
    <thead>
      <tr>
        <th>Account No</th>
        <th>Type</th>
        <th>Balance</th>
        <th>Status</th>
        {{#unless (eq role "CUSTOMER")}}
        <th>Fullname</th>
        {{/unless}}
        <th>BranchName</th>
         {{#unless (eq role "CUSTOMER")}}
        <th>Actions</th>
        {{/unless}}
      </tr>
    </thead>
    <tbody>
      {{#each accounts as |account|}}
        <tr {{action "viewAccount" account}}>
          <td>{{account.acc_no}}</td>
          <td>{{account.acc_type}}</td>
          <td>Rs.{{account.acc_balance}}</td>
          <td>{{account.acc_status}}</td>
          {{#unless (eq role "CUSTOMER")}}
          <td>{{account.user_fullname}}</td>
          {{/unless}}
          <td>{{account.branch_name}}</td>
          {{#unless (eq role "CUSTOMER")}}
          <td>
            <button {{action "editAccount" account}}>Edit</button>
          </td>
          {{/unless}}
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
