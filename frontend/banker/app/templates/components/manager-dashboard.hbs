<div class="card-container">
  <div class="card account-card">
    <h3 class="card-title">Accounts</h3>
    <div class="branch-field">
      <span class="field-label">Savings Accounts:</span>
      <span class="field-value">{{branch.savingsAccountCount}}</span>
    </div>
    <div class="branch-field">
      <span class="field-label">Business Accounts:</span>
      <span class="field-value">{{branch.businessAccountCount}}</span>
    </div>
  </div>

  <div class="card deposit-card">
    <h3 class="card-title">Deposits</h3>
    <div class="branch-field">
      <span class="field-label">Savings Deposits:</span>
      <span class="field-value">Rs. {{branch.totalSavingsDeposits}}</span>
    </div>
    <div class="branch-field">
      <span class="field-label">Business Deposits:</span>
      <span class="field-value">Rs. {{branch.totalBusinessDeposits}}</span>
    </div>
  </div>

  <div class="card loan-card">
    <h3 class="card-title">Loans</h3>
    <div class="branch-field">
      <span class="field-label">Home Loans:</span>
      <span class="field-value">{{branch.homeLoanCount}}</span>
    </div>
    <div class="branch-field">
      <span class="field-label">Education Loans:</span>
      <span class="field-value">{{branch.educationLoanCount}}</span>
    </div>
    <div class="branch-field">
      <span class="field-label">Business Loans:</span>
      <span class="field-value">{{branch.businessLoanCount}}</span>
    </div>
  </div>
</div>
