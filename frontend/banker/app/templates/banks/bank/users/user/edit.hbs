<body>
  <div class="user-form">
    <h2>Edit User</h2>
    
    <form {{action "submitForm" on="submit"}}>
      <div class="form-group">
        <label for="userId">User ID</label>
        <input type="text" id="userId" value={{userId}} class="form-control" disabled>
      </div>

      <div class="form-group">
        <label for="fullname">Full Name</label>
        <input type="text" id="fullname" value={{fullname}} class="form-control" oninput={{action (mut fullname) value="target.value"}}>
      </div>

      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" value={{username}} class="form-control" disabled>
      </div>

      <div class="form-group">
        <label for="user_role">User Role</label>
        <select id="user_role" class="form-control" disabled>
          <option value="">Select Role</option>
          {{#each roles as |role|}}
            <option value={{role}} selected={{if (eq role user_role) "selected"}}>{{role}}</option>
          {{/each}}
        </select>
      </div>

      <div class="form-group">
        <label for="user_phonenumber">Phone Number</label>
        <input type="text" id="user_phonenumber" value={{user_phonenumber}} class="form-control" oninput={{action (mut user_phonenumber) value="target.value"}}>
      </div>

      <div class="form-group">
        <label for="user_address">Address</label>
        <textarea id="user_address" class="form-control" oninput={{action (mut user_address) value="target.value"}}>{{user_address}}</textarea>
      </div>

      <div class="form-group">
        <label for="user_status">User Status</label>
        <select id="user_status" class="form-control" onchange={{action (mut user_status) value="target.value"}}>
          <option value="">Select Status</option>
          {{#each statuses as |status|}}
            <option value={{status}} selected={{if (eq status user_status) "selected"}}>{{status}}</option>
          {{/each}}
        </select>
      </div>

      <button type="submit" class="btn-primary">Update User</button>
      
      {{#link-to "banks.bank.users" bankId}}
      <button  {{action "cancel"}} class="btn-secondary">Cancel</button>
      {{/link-to}}

      {{#if errorMessage}}
        <div class="error-message">* {{errorMessage}}</div>
      {{/if}}
    </form>
  </div>
</body>
