<div class="users-list">
  
  <table class="users-table">
    <thead>
      <tr>
        <th>User ID</th>
        <th>Full Name</th>
        <th>Username</th>
        <th>Phone Number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each users as |user|}}
        <tr {{action "viewUser" user}}>
          <td>{{user.user_id}}</td>
          <td>{{user.fullname}}</td>
          <td>{{user.username}}</td>
          <td>{{user.user_phonenumber}}</td>
          <td>
            <button {{action "editUser" user}}>Edit</button>
            <button {{action "deleteUser" user}}>Delete</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
